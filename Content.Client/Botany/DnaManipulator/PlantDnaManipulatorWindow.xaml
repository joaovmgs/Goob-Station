<controls:FancyWindow xmlns="https://spacestation14.io"
                xmlns:controls="clr-namespace:Content.Client.UserInterface.Controls"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                xmlns:gfx="clr-namespace:Robust.Client.Graphics;assembly=Robust.Client"
                MinSize="300 200"
                Title="{Loc 'plant-dna-manipulator-bound-user-interface-title'}">
    <BoxContainer Orientation="Vertical" Margin="5" SeparationOverride="10">
        <BoxContainer Orientation="Horizontal">
            <Label Text="{Loc 'plant-dna-manipulator-window-seed-label'}" />
            <Control HorizontalExpand="True" />
            <Button MinSize="80 0" Name="SeedEjectButton" Access="Public" Text="{Loc 'plant-dna-manipulator-window-eject-button'}" />
        </BoxContainer>
        <PanelContainer VerticalExpand="True" MinSize="0 150">
            <PanelContainer.PanelOverride>
                <gfx:StyleBoxFlat BackgroundColor="#1B1B1E" />
            </PanelContainer.PanelOverride>
            <ScrollContainer HorizontalExpand="True" MinSize="0 150">
                <BoxContainer Name="SeedInfo" Orientation="Vertical" Margin="4" HorizontalExpand="True">
                    <Label Text="{Loc 'plant-dna-manipulator-window-no-seed'}" />
                </BoxContainer>
            </ScrollContainer>
        </PanelContainer>
    </BoxContainer>
</controls:FancyWindow>
